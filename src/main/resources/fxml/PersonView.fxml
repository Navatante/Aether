<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <BorderPane prefHeight="11.0" prefWidth="473.0">
            <right>
                <HBox alignment="CENTER_RIGHT" prefHeight="71.0" prefWidth="390.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="searchField" minHeight="20.0" minWidth="300.0" promptText="Buscar...">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </TextField>
                        <RadioButton fx:id="activeInactiveSwitch" minHeight="16.0" minWidth="70.0" mnemonicParsing="false" selected="true" text="Activos">
                            <font>
                                <Font name="Segoe UI" size="12.0" />
                            </font>
                        </RadioButton>
                    </children>
                </HBox>
            </right>
            <left>
                <HBox alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="83.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Personal">
                            <font>
                                <Font name="Segoe UI Black" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </left>
        </BorderPane>
        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <AnchorPane>
                    <children>
                        <TableView fx:id="personTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="idColumn" text="ID" />
                                <TableColumn fx:id="codeColumn" text="Código" />
                                <TableColumn fx:id="rankColumn" text="Empleo" />
                                <TableColumn fx:id="nameColumn" text="Nombre" />
                                <TableColumn fx:id="lastName1Column" text="Apellido 1" />
                                <TableColumn fx:id="lastName2Column" text="Apellido 2" />
                                <TableColumn fx:id="phoneColumn" text="Teléfono" />
                                <TableColumn fx:id="dniColumn" text="DNI" />
                                <TableColumn fx:id="divisionColumn" text="División" />
                                <TableColumn fx:id="roleColumn" text="Rol" />
                                <TableColumn fx:id="activeColumn" text="Situación" />
                                <TableColumn fx:id="orderColumn" text="Orden" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
